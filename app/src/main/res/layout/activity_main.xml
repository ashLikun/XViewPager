<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="跳转" />


    <com.ashlikun.xviewpager.view.BannerViewPager
        android:id="@+id/bannerViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bvg_ratio="1.77"
        app:bvg_turningTime="1000" />

    <com.ashlikun.xviewpager.view.ImageViewExt
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@mipmap/i_logo"
        app:ive_Size="30dp"
        app:ive_arc_location="top"
        app:ive_ratio="1"></com.ashlikun.xviewpager.view.ImageViewExt>
</LinearLayout>
