<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="跳转" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--                <com.ashlikun.xviewpager.view.BannerViewPager-->
                <!--                    android:id="@+id/bannerViewPager"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:banner_turningTime="4000"-->
                <!--                    app:xvp_radius="10dp"-->
                <!--                    app:xvp_ratio="1.77" />-->

                <com.ashlikun.xviewpager.ConvenientBanner
                    android:id="@+id/convenientBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:banner_isAutoTurning="false"
                    app:banner_turningTime="1000"
                    app:ind_select="@drawable/circle_select"
                    app:ind_style="ind_zoom"
                    app:xvp_radiusLeftBottom="20dp"
                    app:xvp_ratio="2.77" />

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="10000dp"-->
                <!--android:background="#ff0000"></View>-->

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


</LinearLayout>
